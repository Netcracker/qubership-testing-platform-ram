{
  "info": {
    "name": "API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /api/charts/ping",
      "request": {
        "method": "GET",
        "header": [],
        "auth": {
          "type": "basic",
          "basic": [
            { "key": "username", "value": "user", "type": "string" },
            { "key": "password", "value": "user", "type": "string" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/charts/ping",
          "host": ["{{base_url}}"],
          "path": ["api", "charts", "ping"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "console.log('=== Response Body ===');",
              "console.log(pm.response.text());",
              "const json = pm.response.json();",
              "pm.environment.set('vaId', json[0].id);",
              "console.log('Saved ID:', json[0].id);",
              "pm.test(\"Status is 200 or 201\", function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});"
            ]
          }
        }
      ]
    },
